@model JQueryPostModelBinding.Web.Models.FormPostModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @using(Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "postForm"}))
        {
            <div>
                @Html.LabelFor(x => x.Title)
                @Html.EditorFor(x => x.Title)
            </div>
            <div>
                @Html.LabelFor(x => x.Content)
                @Html.EditorFor(x => x.Content)
            </div>
            <input type="submit" value="Post送出" />
            <input id="btnSubmitUsingJqueryPost" type="submit" value="JqueryPost - serialize 送出" />
            <input id="btnSubmitUsingJqueryPostObject" type="submit" value="JqueryPost - object 送出" />
        }
    </div>
    <div>
        <h3>送出返回的資料</h3>
        <div id="divResult"></div>
    </div>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script>
        $(function () {
            $("#btnSubmitUsingJqueryPost").click(function () {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("JqueryPost")",
                    data: $("#postForm").serialize(),
                    success: function (result) {
                        $("#divResult").html(result);
                    }
                })
                return false;
            })
        })
    </script>
    <script>
        $(function () {
            $("#btnSubmitUsingJqueryPostObject").click(function () {
                var data = {};
                data.Title = $("#Title").val();
                data.Content = $("#Content").val();

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("JqueryPost")",
                    data: data,
                    success: function (result) {
                        $("#divResult").html(result);
                    }
                })
                return false;
            })
        })
    </script>
</body>
</html>
